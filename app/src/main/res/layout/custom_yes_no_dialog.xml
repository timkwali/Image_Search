<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">
        <TextView
            android:id="@+id/yesNoDialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/effra_std_rg"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/yesNoDialog_message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:textSize="16dp"
            android:gravity="start"
            android:fontFamily="@font/effra_std_rg"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/yesNoDialog_title_tv" />

        <TextView
            android:id="@+id/yesNoDialog_yes_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:textColor="@color/dark_orange"
            android:textSize="14sp"
            android:fontFamily="@font/effra_std_rg"
            android:textFontWeight="400"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/yesNoDialog_message_tv"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/yesNoDialog_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:textColor="@color/dark_orange"
            android:textSize="14sp"
            android:fontFamily="@font/effra_std_rg"
            android:textFontWeight="400"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toStartOf="@+id/yesNoDialog_yes_tv"
            app:layout_constraintTop_toBottomOf="@+id/yesNoDialog_message_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>